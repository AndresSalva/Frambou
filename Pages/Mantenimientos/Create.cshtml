@page
@model HospitalDeVehiculosUltimaVersion.Pages.Mantenimientos.CreateModel
@{
    ViewData["Title"] = "Crear mantenimiento";
}

<h1 class="display-6">Crear mantenimiento</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Selección de Vehículo -->
    @if (Model.idVehiculo.HasValue)
    {
        <!-- Si vino por query, ocultamos el selector y fijamos el valor -->
        <input type="hidden" asp-for="Mantenimiento.IdVehiculo" value="@Model.idVehiculo.Value" />
        <div class="mb-3">
            <label class="form-label">Vehículo seleccionado</label>
            <div class="form-control-plaintext">
                ID #@Model.idVehiculo.Value
            </div>
        </div>
    }
    else
    {
        <div class="mb-3">
            <label asp-for="Mantenimiento.IdVehiculo" class="form-label">Vehículo</label>
            <select asp-for="Mantenimiento.IdVehiculo" asp-items="Model.VehiculosOptions" class="form-select">
                <option value="">-- Selecciona un vehículo --</option>
            </select>
            <span asp-validation-for="Mantenimiento.IdVehiculo" class="text-danger"></span>
        </div>
    }

    <!-- Fecha programada -->
    <div class="mb-3">
        <label asp-for="Mantenimiento.FechaProgramada" class="form-label"></label>
        <input asp-for="Mantenimiento.FechaProgramada" class="form-control" type="datetime-local" />
        <span asp-validation-for="Mantenimiento.FechaProgramada" class="text-danger"></span>
    </div>

    <!-- Si tu entidad tiene otros campos opcionales (p. ej., Notas/Descripción), los puedes agregar aquí -->
    @* 
    <div class="mb-3">
        <label asp-for="Mantenimiento.Observaciones" class="form-label"></label>
        <textarea asp-for="Mantenimiento.Observaciones" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Mantenimiento.Observaciones" class="text-danger"></span>
    </div>
    *@

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./Index" class="btn btn-outline-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
