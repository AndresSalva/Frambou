@page
@model HospitalDeVehiculosUltimaVersion.Pages.Vehiculos.EditModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<h4>Vehiculo</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Vehiculo.Id" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Marca" class="form-label"></label>
                <input asp-for="Vehiculo.Marca" class="form-control" />
                <span asp-validation-for="Vehiculo.Marca" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Modelo" class="form-label"></label>
                <input asp-for="Vehiculo.Modelo" class="form-control" />
                <span asp-validation-for="Vehiculo.Modelo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Placa" class="form-label"></label>
                <input asp-for="Vehiculo.Placa" class="form-control" />
                <span asp-validation-for="Vehiculo.Placa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Kilometraje" class="form-label"></label>
                <input asp-for="Vehiculo.Kilometraje" class="form-control" type="number" step="any" />
                <span asp-validation-for="Vehiculo.Kilometraje" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.CapacidadMotor" class="form-label"></label>
                <input asp-for="Vehiculo.CapacidadMotor" class="form-control" type="number" step="any" />
                <span asp-validation-for="Vehiculo.CapacidadMotor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Combustible" class="form-label"></label>
                <input asp-for="Vehiculo.Combustible" class="form-control" />
                <span asp-validation-for="Vehiculo.Combustible" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Transmision" class="form-label"></label>
                <input asp-for="Vehiculo.Transmision" class="form-control" />
                <span asp-validation-for="Vehiculo.Transmision" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.IdCliente" class="form-label"></label>
                <select asp-for="Vehiculo.IdCliente"
                        asp-items="Model.ClientesOptions"
                        class="form-select">
                    <option value="">-- Selecciona un cliente --</option>
                </select>
                <span asp-validation-for="Vehiculo.IdCliente" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.FechaRegistro" class="form-label"></label>
                <input asp-for="Vehiculo.FechaRegistro" class="form-control" type="datetime-local" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.UltimaActualizacion" class="form-label"></label>
                <input asp-for="Vehiculo.UltimaActualizacion" class="form-control" type="datetime-local" readonly />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
