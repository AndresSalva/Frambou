@page
@model HospitalDeVehiculosUltimaVersion.Pages.Vehiculos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Vehiculo</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Marca" class="form-label"></label>
                <input asp-for="Vehiculo.Marca" class="form-control" />
                <span asp-validation-for="Vehiculo.Marca" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Modelo" class="form-label"></label>
                <input asp-for="Vehiculo.Modelo" class="form-control" />
                <span asp-validation-for="Vehiculo.Modelo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Placa" class="form-label"></label>
                <input asp-for="Vehiculo.Placa" class="form-control" />
                <span asp-validation-for="Vehiculo.Placa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Kilometraje" class="form-label"></label>
                <input asp-for="Vehiculo.Kilometraje" class="form-control" type="number" step="any" />
                <span asp-validation-for="Vehiculo.Kilometraje" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.CapacidadMotor"></label>
                <select asp-for="Vehiculo.CapacidadMotor" asp-items="Model.CapacidadMotorOptions" class="form-control">
                    <option value="">-- Selecciona capacidad --</option>
                </select>
                <span asp-validation-for="Vehiculo.CapacidadMotor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Combustible"></label>
                <select asp-for="Vehiculo.Combustible" asp-items="Model.CombustibleOptions" class="form-control">
                    <option value="">-- Selecciona combustible --</option>
                </select>
                <span asp-validation-for="Vehiculo.Combustible" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.Transmision"></label>
                <select asp-for="Vehiculo.Transmision" asp-items="Model.TransmisionOptions" class="form-control">
                    <option value="">-- Selecciona transmisión --</option>
                </select>
                <span asp-validation-for="Vehiculo.Transmision" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vehiculo.IdCliente" class="form-label">Cliente</label>
                <select asp-for="Vehiculo.IdCliente"
                        asp-items="Model.ClientesOptions"
                        class="form-select">
                    <option value="">-- Selecciona un cliente --</option>
                </select>
                <span asp-validation-for="Vehiculo.IdCliente" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
